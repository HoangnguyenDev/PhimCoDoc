@model DVMN.Models.FilmViewModels.CreateEditFilmViewModel

<div class="box box-success">
    <div class="box-header with-border">
        <h3 class="box-title">Thêm phim mới</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
        </div>
    </div>
    <form asp-action="Create" class="form-horizontal">
        <div class="box-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="OrtherTitle" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="OrtherTitle" class="form-control" />
                    <span asp-validation-for="OrtherTitle" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionShort" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="DescriptionShort" class="form-control" />
                    <span asp-validation-for="DescriptionShort" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Info" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Info" class="form-control" />
                    <span asp-validation-for="Info" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Length" class="form-control" />
                    <span asp-validation-for="Length" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="Description" class="ckeditor"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DateofRease" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input asp-for="DateofRease" type="text" class="form-control pull-right" id="datepicker">
                    </div>
                </div>
            </div>
           
            <div class="form-group">
                <label asp-for="Video" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Video" class="form-control"/>
                    <span asp-validation-for="Video" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="VideoBackUp1" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="VideoBackUp1" class="form-control" />
                    <span asp-validation-for="VideoBackUp1" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="VideoBackUp2" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="VideoBackUp2" class="form-control" />
                    <span asp-validation-for="VideoBackUp2" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="VideoTrailer" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="VideoTrailer" class="form-control" />
                    <span asp-validation-for="VideoTrailer" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Slug" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Slug" class="form-control" />
                    <span asp-validation-for="Slug" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ImageID" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="ImageID" class="form-control" asp-items="ViewBag.ImageID"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SerieID" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="SerieID" class="form-control" asp-items="ViewBag.SerieID"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Genres" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Genres" class="form-control" />
                    <span asp-validation-for="Genres" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <label asp-for="IsProposed"><input type="checkbox" asp-for="IsProposed" /></label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Actor" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Actor" class="form-control" />
                    <span asp-validation-for="Actor" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Director" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Director" class="form-control" />
                    <span asp-validation-for="Director" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TempTag" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="TempTag" class="form-control" />
                    <span asp-validation-for="TempTag" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="box-footer clearfix">
            <input type="submit" value="Tiếp tục" class="btn btn-success pull-right" />
        </div>
    </form>
</div>
