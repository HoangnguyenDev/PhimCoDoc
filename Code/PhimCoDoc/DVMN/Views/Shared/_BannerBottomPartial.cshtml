@using DVMN.Models.FilmViewModels
@model IEnumerable<BannerBottomFilmViewModel>

<div class="w3_agile_banner_bottom_grid">
    <div id="owl-demo" class="owl-carousel owl-theme">
        <!-- Max 10 item films -->
        
        @foreach (var item in Model)
            {
            <div class="item">
                <div class="w3l-movie-gride-agile w3l-movie-gride-agile1">
                    <a style="color:#337ab7;" asp-controller="Film" asp-action="Single" asp-route-slug="@item.Slug" class="hvr-shutter-out-horizontal">
                        <img src="@item.Image.Pic182x268" title="@item.Image.Title" class="img-responsive" alt="@item.Image.ALT" />
                        <div class="w3l-action-icon"><i class="fa fa-play-circle" aria-hidden="true"></i></div>
                    </a>
                    <div class="mid-1 agileits_w3layouts_mid_1_home">
                        <div class="w3l-movie-text">
                            <h6><a style="color:#337ab7;" asp-controller="Film" asp-action="Single" asp-route-slug="@item.Slug">@item.Title</a></h6>
                        </div>
                        <div class="mid-2 agile_mid_2_home">
                            <p>@item.OrtherTitle </p>
                            @item.DateOfRelease.Value.Year
                            <div class="clearfix"></div>
                        </div>
                    </div>
                    <div class="ribben">
                        <p>Má»šI</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

